    "plyr": "^3.8.3",
    "preact": "^10.27.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss-animate": "^1.0.7",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.10.2",
    "@tailwindcss/postcss": "^4.0.0",
    "@tauri-apps/cli": "1.6",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
